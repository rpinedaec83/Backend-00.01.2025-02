<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h3 class="text-center">Editar Curso</h3>
      </div>
      <div class="card-body">
        <form action="/courses/<%= course._id %>?_method=PUT" method="POST">
          <div class="mb-3">
            <label for="name" class="form-label">Nombre del Curso</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= course.name %>" required>
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Descripci√≥n</label>
            <textarea class="form-control" id="description" name="description" rows="3" required><%= course.description %></textarea>
          </div>
          <div class="mb-3">
            <label for="valor" class="form-label">Precio</label>
            <input type="number" step="0.01" min="0" class="form-control" id="valor" name="valor" value="<%= course.valor %>" required>
          </div>
          <div class="mb-3">
            <label for="img" class="form-label">Imagen del Curso (URL)</label>
            <input type="url" class="form-control" id="img" name="img" value="<%= course.img %>" required>
          </div>
          <div class="mb-3">
            <label for="portada" class="form-label">Imagen de Portada (URL)</label>
            <input type="url" class="form-control" id="portada" name="portada" value="<%= course.portada %>" required>
          </div>
          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Actualizar Curso</button>
            <a href="/courses/<%= course._id %>" class="btn btn-secondary">Cancelar</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>