<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>Cursos Disponibles</h2>
  <% if (user && (user.role === 'moderador' || user.role === 'admin')) { %>
    <a href="/courses/create" class="btn btn-success">
      <i class="fas fa-plus"></i> Nuevo Curso
    </a>
  <% } %>
</div>

<div class="row">
  <% courses.forEach(course => { %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <img src="<%= course.img %>" class="card-img-top" alt="<%= course.name %>">
        <div class="card-body">
          <h5 class="card-title"><%= course.name %></h5>
          <p class="card-text"><%= course.description.substring(0, 100) %>...</p>
          <p class="text-success fw-bold">$<%= course.valor.toFixed(2) %></p>
        </div>
        <div class="card-footer bg-white">
          <a href="/courses/<%= course._id %>" class="btn btn-primary">Ver Detalles</a>
          <% if (user && (user.role === 'moderador' || user.role === 'admin')) { %>
            <a href="/courses/<%= course._id %>/edit" class="btn btn-secondary">Editar</a>
          <% } %>
        </div>
      </div>
    </div>
  <% }) %>
</div>

<% if (totalPages > 1) { %>
  <nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
      <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= currentPage == i ? 'active' : '' %>">
          <a class="page-link" href="?page=<%= i %>"><%= i %></a>
        </li>
      <% } %>
    </ul>
  </nav>
<% } %>