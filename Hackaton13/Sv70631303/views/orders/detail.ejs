<%- include('../partials/header') %>
<%- include('../partials/navigation') %>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h3>Orden #<%= order.orderNumber %></h3>
          <span class="badge 
            <%= order.status === 'pendiente' ? 'bg-warning' : '' %>
            <%= order.status === 'pagado' ? 'bg-info' : '' %>
            <%= order.status === 'completado' ? 'bg-success' : '' %>
            <%= order.status === 'cancelado' ? 'bg-danger' : '' %>">
            <%= order.status %>
          </span>
        </div>
        <div class="card-body">
          <p><strong>Fecha:</strong> <%= new Date(order.createdAt).toLocaleString() %></p>
          <p><strong>Método de pago:</strong> <%= order.paymentMethod %></p>
          
          <h5 class="mt-4">Cursos</h5>
          <ul class="list-group mb-3">
            <% order.courses.forEach(course => { %>
              <li class="list-group-item d-flex justify-content-between">
                <div>
                  <h6><%= course.name %></h6>
                  <small class="text-muted"><%= course.description %></small>
                </div>
                <span>$<%= course.valor.toFixed(2) %></span>
              </li>
            <% }) %>
          </ul>

          <% if (order.couponUsed) { %>
            <div class="alert alert-success">
              <h5>Cupón aplicado</h5>
              <p><strong>Código:</strong> <%= order.couponUsed.code %></p>
              <p><strong>Descuento:</strong> 
                <% if (order.couponUsed.discountType === 'percentage') { %>
                  <%= order.couponUsed.discountValue %>% 
                <% } else { %>
                  $<%= order.couponUsed.discountValue.toFixed(2) %>
                <% } %>
              </p>
            </div>
          <% } %>

          <div class="d-flex justify-content-between mt-4">
            <h5>Total:</h5>
            <h5>$<%= order.finalAmount.toFixed(2) %></h5>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h5>Acciones</h5>
        </div>
        <div class="card-body">
          <% if (order.status === 'pendiente') { %>
            <a href="/payments/process?orderId=<%= order._id %>" class="btn btn-primary w-100 mb-2">Pagar Ahora</a>
          <% } %>
          
          <% if (user.role === 'moderador' || user.role === 'admin') { %>
            <a href="/orders/<%= order._id %>/edit" class="btn btn-outline-secondary w-100 mb-2">Editar Estado</a>
          <% } %>
          
          <a href="/courses" class="btn btn-outline-info w-100 mb-2">Ver más cursos</a>
          
          <% if (user.role === 'admin') { %>
            <form action="/orders/<%= order._id %>?_method=DELETE" method="POST" class="mt-2">
              <button type="submit" class="btn btn-outline-danger w-100">Eliminar Orden</button>
            </form>
          <% } %>
        </div>
      </div>

      <div class="card mt-3">
        <div class="card-header">
          <h5>Información del Cliente</h5>
        </div>
        <div class="card-body">
          <p><strong>Nombre:</strong> <%= order.user.firstName %> <%= order.user.lastName %></p>
          <p><strong>Email:</strong> <%= order.user.email %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>